generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                            String               @id @default(cuid())
  name                          String?
  email                         String?              @unique
  emailVerified                 DateTime?
  image                         String?
  isAdmin                       Boolean              @default(false)
  accounts                      Account[]
  sessions                      Session[]
  ownedRecipes                  Recipe[]             @relation("RecipeOwner")
  recipesCreated                Recipe[]             @relation("RecipeCreatedBy")
  recipesUpdated                Recipe[]             @relation("RecipeUpdatedBy")
  ownedShoppingListEntries      ShoppingListEntry[]  @relation("ShoppingListOwner")
  shoppingListEntriesCreated    ShoppingListEntry[]  @relation("ShoppingListCreatedBy")
  shoppingListEntriesUpdated    ShoppingListEntry[]  @relation("ShoppingListUpdatedBy")
  collaborationInvitationsSent  Collaboration[]      @relation("CollaborationOwner")
  collaborationsAccepted        Collaboration[]      @relation("CollaborationCollaborator")
  recipeFavorites               RecipeFavorite[]
  createdAt                     DateTime             @default(now())
  updatedAt                     DateTime             @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model AllowedEmail {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Recipe {
  id          String   @id @default(cuid())
  ownerId     String
  createdById String
  updatedById String
  title       String
  summary     String?
  ingredients String[]
  tags        String[] @default([])
  isFavorite  Boolean  @default(false)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner     User @relation("RecipeOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  createdBy User @relation("RecipeCreatedBy", fields: [createdById], references: [id], onDelete: Cascade)
  updatedBy User @relation("RecipeUpdatedBy", fields: [updatedById], references: [id], onDelete: Cascade)
  favorites RecipeFavorite[]

  @@index([ownerId, sortOrder])
  @@index([ownerId, createdAt])
}

model RecipeFavorite {
  id        String   @id @default(cuid())
  recipeId  String
  userId    String
  createdAt DateTime @default(now())

  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([recipeId, userId])
  @@index([userId])
}

model ShoppingListEntry {
  id                String   @id @default(cuid())
  ownerId           String
  createdById       String
  updatedById       String
  label             String
  normalizedLabel   String
  quantityText      String
  amountValue       Float?
  measureText       String?
  sourceRecipeId    String?
  sourceRecipeTitle String?
  createdAt         DateTime @default(now())
  sortOrder         Int      @default(0)

  owner     User @relation("ShoppingListOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  createdBy User @relation("ShoppingListCreatedBy", fields: [createdById], references: [id], onDelete: Cascade)
  updatedBy User @relation("ShoppingListUpdatedBy", fields: [updatedById], references: [id], onDelete: Cascade)

  @@index([ownerId, normalizedLabel])
}

model Collaboration {
  id              String                     @id @default(cuid())
  resourceType    CollaborationResourceType
  resourceId      String
  ownerId         String
  collaboratorId  String
  createdAt       DateTime                   @default(now())
  updatedAt       DateTime                   @updatedAt
  invitedEmail    String
  acceptedAt      DateTime?

  owner        User @relation("CollaborationOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  collaborator User @relation("CollaborationCollaborator", fields: [collaboratorId], references: [id], onDelete: Cascade)

  @@index([resourceType, resourceId])
  @@index([collaboratorId])
  @@unique([resourceType, resourceId, collaboratorId])
}

enum CollaborationResourceType {
  RECIPE
  SHOPPING_LIST
}
